<%= render 'shared/form' %>

<div>
  <% @tweets.each do |tweet| %>
    <p><%= tweet.body %></p>

    <% @likes.each do |like| %>
      <%  if like.tweet.id == tweet.id%>
      <p> <%= like.user.username %> Liked this</p>
      <% end %>
    <% end %>
  <p> <%= link_to "Like", tweet_likes_path(tweet), method: :post%> </p>
  <% end %>
</div>
<% @tweets.reverse_each do |tweet| %>
  <%= render 'shared/card', tweet: tweet %>
<% end %>